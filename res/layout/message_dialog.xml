<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    
    
    
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:id="@+id/messageLayout">
    
    <EditText android:id="@+id/editTextMessage" android:layout_height="wrap_content" android:layout_width="fill_parent" android:lines="6" android:layout_marginLeft="@dimen/main_spaces" android:layout_marginRight="@dimen/main_spaces" android:cursorVisible="true" android:isScrollContainer="true" android:gravity="top|left"></EditText>
    <Button android:id="@+id/buttonSaveAll" android:layout_height="wrap_content" android:layout_below="@+id/alarmLayout" android:layout_width="fill_parent" android:layout_margin="@dimen/main_spaces" android:text="@string/imposta"></Button>
    
</LinearLayout>

</RelativeLayout>
